int cantidad_digito(int n){


	int i=0;


	while (n>0){


		n=n/10;


		i++;


	}


	return i;


}



int unir (int n1, int n2){


	int nf, dig;



	dig=cantidad_digitos(n2);


	nf=n1*powf(10,dig)+n2;


	return (nf);


}
