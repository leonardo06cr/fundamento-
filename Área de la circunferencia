
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using  namespace std;
void main ()
{
	float area,radio;
	cout<< "Hey,en este programa puedes calucular el area de una circunferencia"<<endl;
	cout<<"Por favor, ingrese los datos necesarios"<<endl;
	cout<<"Ingrese el radio de la circunferencia:";
	cin>>radio;
	area=3.1416*radio*radio;
	cout<<"El area de la circunferencia es:";
	cout<<area;
	getch();
}

****************************************************
Algoritmo areadeunacircunferencia
	Escribir "Hey"
	Escribir "Calculemos el area de una cricunferencia"
	Escribir "Escribir el radio de la circunferencia:"
	Leer radio
	area<-3.1416*radio*radio
	Escribir "El area de una cricunferencia es:"," ",area;
