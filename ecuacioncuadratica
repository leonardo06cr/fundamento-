#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "math.h"
using namespace std;
 void main()
 {
	 double a,b,c,x1,x2;
	 cout<<"ingrese el valos de a";
	 cin>>a;
	 cout<<"ingrese el valor de b";
	 cin>>b;
	 cout<<"ingrese el valor de c";
	 cin>>c;
	 if(b*b-4*a*c>0){
		 cout<<"tiene dos soluciones";
		 x1=(-b+sqrt(b*b-4*a*c))/2*a;
		 x2=(-b-sqrt(b*b-4*a*c))/2*a;
		 cout<<"el valor de x1 es:"<<x1;
		 cout<<"el valor de x2 es :"<<x2;
	 }
	 else
		 if(b*b-4*a*c == 0){
			 cout<<"el numero tiene una solucion doble";
			 x1=(-b+sqrt(b*b-4*a*c))/2*a;
			 x2=(-b-sqrt(b*b-4*a*c))/2*a;
			 cout<<"el valor de x1 es:"<<x1;
		     cout<<"el valor de x2 es :"<<x2;
		 }
		 else
		  if(b*b-4*a*c<0){
			  cout<<"no tiene solucion";
		  }
 
		  getch();
 }
			
