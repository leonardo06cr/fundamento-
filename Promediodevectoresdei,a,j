#include "stdafx.h"
#include <iostream>
#include "conio.h"
#define MAX 100
using namespace std;

void cargar(int vec[],int tam);
float promedio(int vec[],int tam,int i,int j);


void main(){
	int vec[MAX],i,tam,j;
	float p;
	do{
		cout<<"Ingrese el tamaÃ±o del vector:";
		cin>>tam;
	}while(tam<0||tam>MAX);
	cargar(vec,tam);
	
		cout<<"ingrese la posicion i: "<<endl;
		cin>>i;
		cout<<"ingrese la posicion j"<<endl;
		cin>>j;

		p=promedio(vec,tam,i,j);
		cout<<"El promedio de la i hasta la j es de: "<<p;

		getch();
}

void cargar (int vec[],int tam){
	for(int i=0;i<tam;i++)
		cin>>vec[i];
}

float promedio(int vec[],int n,int i, int j){
	float s=0;
	int tam=j-i+1;
	for(int k=0;k<n;k++){
		if(k>=i && k<=j)
		s=s+vec[k];
	}
	return s/tam;
}
