#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <string>
#define MAX 100

using namespace std;

bool cargar(string dato[],int tam);
void mostra(string dato2[],int tam);
void clasificar(string dato[], int tam);
bool buscar (string dato[], int tam, string a);

void main(){
	string dato[MAX],nombre;
	int tam, opcion;
    bool resp=false;
	cout<<"Ingrese el tamanio : ";
	cin>>tam;
    do{
	   cout<<"------MENU------"<<endl;
	   cout<<"1.ingresar"<<endl;
	   cout<<"2.listar"<<endl;
	   cout<<"3.clasificar"<<endl;
	   cout<<"4.buscar"<<endl;
	   cout<<"0.salir"<<endl;
	   cout<<"cual opcion desea?"<<endl;
	   cin>>opcion;
	   switch (opcion){
	      case 1: resp=cargar(dato,tam); 
		          break;
		  case 2: if (resp==false)
				      cout<<"Sin datos"<<endl;
				  else 
					  mostra(dato,tam);
				  break;
		  case 3: if (resp==false)
						cout<<"Sin datos"<<endl;
				  else
					  clasificar(dato,tam);
				  break;
		  case 4: if(resp==false)
					  cout<<"sin datos"<<endl;
				  else{
					  cin.ignore();
					  cout<<"ingrese el nombre a buscar";
					  getline(cin,nombre);
					  if (buscar (dato,tam,nombre))
						  cout<<"Es tu amigo";
					  else
						  cout<<"No es tu amigo";
				  }
				  break;
		  case 0:
					cout<<"Salir"<<endl;
					break;
		  default: cout<<"opcion ivalida"<<endl;
				   break;
		}
	   }while(opcion!=0);
		getch();
}
bool cargar(string dato[],int tam)
{
	bool resp=true;
	cin.ignore();
	for(int i=0;i<tam;i++){
		cout<<"ingrese nombres: "<<endl;
		getline(cin,dato[i]);}
    return resp;
}

void mostra(string dato2[],int tam)
{
	for(int i=0;i<tam;i++)
		cout<<dato2[i]<<endl;
}

void clasificar(string dato[], int tam)
{
	string aux;
	for(int i=0;i<tam-1;i++)
		for(int j=i+1;j<tam;j++){
			if (dato[i]>dato[j]) {
				aux=dato[i];
				dato[i]=dato[j];
				dato[j]=aux;
			}
	}
}

bool buscar (string dato[], int tam, string a)
{
	for(int i=0;i<tam;i++)
		if (dato[i]== a)
			return true;
	return false;
}
