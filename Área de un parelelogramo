
#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	float base,altura,area;
	cout<<"Saludos, este programa calcula el area de un paralelogramo."<<endl;
	cout<<"Por favor, ingrese los siguinetes datos."<<endl;
	cout<<"Ingrese la base del paralelogramo:";
	cin>>base;
	cout<<"Ingresela altura del paralelogramo:";
	cin>>altura;
	area=base*altura;
	cout<<"El area de la circunferencia es:"; 
	cout<<area<<endl;
	cout<<"Gracias por usar este programa"<<endl;
	cout<<"Esperemos que le hayamos ayudado!";

	getch();
}

