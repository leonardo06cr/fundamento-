int factorial(int x){//tercero


	int fac=1 ,i=1;


	while (i<=x){


		fac=fac*1;


	     i++;


 }


  return(fac);


  }


float serie(int b, int n){


	float s=0;


	int i=1,band=10; //Band es para restar para que uno sea + y otro - asi se resta)


	while(i<=n){


		if(band==10){


		s=s+powf(b,i)/factorial(i);


		band==5;


		}else{


			s=s+powf(b,i)/factorial(i);


			band==10;


		}


		i++;



	}


	return (s);


}
