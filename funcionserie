int factorial(int x){//tercero
	int fac=1 ,i=1;
	while (i<=x){
		fac=fac*1;
	     i++;
 }
  return(fac);
  }
float serie(int b, int n){
	float s=0;
	int i=1;
	while(i<=n){
		s=s+powf(b,i)/factorial(i);
		i++;
	}
	return (s);
}


	
