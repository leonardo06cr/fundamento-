#include <iostream>
#include <string>
using namespace std;

void capicua(string nombre)


void main(){
	string nombre;
	
	cout<<"Ingrese la palabra : ";
	getline(cin,nombre);

	capicua(nombre);

	getch();
}

void capicua(string nombre){
	int longitud;
	int k=0;
	longitud=nombre.length();
	for(int i=0;i<(longitud/2);i++){
		if(nombre[i]!=nombre[longitud-1-i]){
			k=1;
		}
	}
	if(k==1){
		cout<<"No es capicua ....";
	}else{
		cout<<"Es capicua....";
	}
}

